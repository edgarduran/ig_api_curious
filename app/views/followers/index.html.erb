<h1>Follow Page</h1>

<h2 class="text-center">Your Followers</h2><br>
<div class="row">
  <% @followers[:data].each do |follower| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag follower[:profile_picture] %>
      <div class="caption">
        <h3 class="text-center"><%= follower[:username] %></h3>
      </div>
    </div>
  </div>
  <% end %>
</div>

<h2 class="text-center">People You Are Following</h2><br>
<div class="row">
  <% @following[:data].each do |follow| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag follow[:profile_picture] %>
      <div class="caption">
        <h3 class="text-center"><%= follow[:username] %></h3>
      </div>
    </div>
  </div>
  <% end %>
</div>
