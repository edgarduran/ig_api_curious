<!DOCTYPE html>
<html>
<body>
    <div>
        <header></header>
        <%= image_tag @user_info[:data][:profile_picture], class: "img-circle col-md-4" %>
        <h1 class="text-center"><%= @user_info[:data][:username] %></h1>
        <h3 class="text-center"><%= @user_info[:data][:full_name] %></h3>
        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                <h4 class="text-center"><%= @user_info[:data][:counts][:media]%> Posts </h4>
            </div>
            <div class="col-md-2">
                <h4 class="text-center"><%= @user_info[:data][:counts][:followed_by]%> Followers </h4>
            </div>
            <div class="col-md-2">
                <h4 class="text-center"><%= @user_info[:data][:counts][:follows]%> Following </h4>
            </div>
        </div>
    </div><br>
    <div></div>
    <div class="jumbotron">
        <h1 class="text-center">Your Posts</h1>
        <p></p>
        <% @images[:data].each do |image| %>
        <ul>
          <li><%= image_tag image[:images][:low_resolution][:url] %> </li>
        </ul>
        <% end %>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>
